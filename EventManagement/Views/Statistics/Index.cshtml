@{
    ViewBag.Title = "Thống kê chi tiết sự kiện";
    var stats = ViewBag.EventStats as IEnumerable<dynamic>;
    var labels = stats.Select(s => s.Title).ToList();
    var tickets = stats.Select(s => s.TicketsSold).ToList();
    var revenues = stats.Select(s => s.Revenue).ToList();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f1f3f5;
        }

        h2 {
            font-weight: bold;
            margin-bottom: 40px;
        }

        .chart-container {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }

        table th {
            background-color: #0d6efd;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center">Thống kê chi tiết sự kiện</h2>

        <div class="mb-4 text-end">
            <a href="/Statistics/ExportToExcel" class="btn btn-success">
                <i class="bi bi-file-earmark-excel-fill"></i> Xuất Excel
            </a>
        </div>

        <div class="row g-4">
            <div class="col-md-6 chart-container">
                <h5 class="text-center">Số vé đã bán</h5>
                <canvas id="ticketChart"></canvas>
            </div>
            <div class="col-md-6 chart-container">
                <h5 class="text-center">Doanh thu sự kiện (VNĐ)</h5>
                <canvas id="revenueChart"></canvas>
            </div>
        </div>

        <div class="mt-5">
            <h5>Bảng thống kê chi tiết:</h5>
            <table class="table table-bordered table-hover mt-3">
                <thead>
                    <tr>
                        <th>Tên sự kiện</th>
                        <th>Giá vé</th>
                        <th>Số vé đã bán</th>
                        <th>Doanh thu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in stats)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Price.ToString("N0") VNĐ</td>
                            <td>@item.TicketsSold</td>
                            <td>@item.Revenue.ToString("N0") VNĐ</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script>
        const labels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(labels));
        const ticketData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(tickets));
        const revenueData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(revenues));

        new Chart(document.getElementById("ticketChart"), {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Vé đã bán',
                    data: ticketData,
                    backgroundColor: '#0d6efd'
                }]
            },
            options: {
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        new Chart(document.getElementById("revenueChart"), {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Doanh thu (VNĐ)',
                    data: revenueData,
                    backgroundColor: '#20c997'
                }]
            },
            options: {
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    </script>
</body>
</html>
