@{
    ViewBag.Title = "Admin Dashboard";
    var username = ViewBag.Username as string ?? "Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;600&display=swap" rel="stylesheet" />

    <style>
        body {
            background-color: #f2f4f6;
            font-family: 'Roboto', sans-serif;
        }

        .dashboard-title {
            font-weight: 600;
            color: #343a40;
        }

        .card {
            border: none;
            border-radius: 16px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-6px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            }

        .card-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
            color: #0d6efd;
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #212529;
        }

        .card-text {
            font-size: 0.95rem;
            color: #6c757d;
        }

        .btn {
            font-weight: 500;
        }

        .welcome-message {
            text-align: center;
            font-size: 1rem;
            color: #6c757d;
            margin-top: -10px;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <section class="container py-5">
        <div class="row g-4 justify-content-center">
            <!-- Quản lý sự kiện -->
            <div class="col-md-4 col-sm-6">
                <div class="card text-center h-100 shadow-sm d-flex flex-column">
                    <div class="card-body flex-grow-1">
                        <div class="card-icon"><i class="bi bi-calendar-event-fill"></i></div>
                        <h5 class="card-title">Quản lý sự kiện</h5>
                        <p class="card-text">Thêm, sửa, xoá các sự kiện trong hệ thống.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="/Event/Index" class="btn btn-primary w-100">Quản lý sự kiện</a>
                    </div>
                </div>
            </div>

            <!-- Quản lý người dùng -->
            <div class="col-md-4 col-sm-6">
                <div class="card text-center h-100 shadow-sm d-flex flex-column">
                    <div class="card-body flex-grow-1">
                        <div class="card-icon"><i class="bi bi-people-fill"></i></div>
                        <h5 class="card-title">Quản lý người dùng</h5>
                        <p class="card-text">Xem, chỉnh sửa và xoá người dùng hệ thống.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="/Account/Index" class="btn btn-secondary w-100">Quản lý người dùng</a>
                    </div>
                </div>
            </div>

            <!-- Thống kê -->
            <div class="col-md-4 col-sm-6">
                <div class="card text-center h-100 shadow-sm d-flex flex-column">
                    <div class="card-body flex-grow-1">
                        <div class="card-icon"><i class="bi bi-bar-chart-fill"></i></div>
                        <h5 class="card-title">Thống kê sự kiện</h5>
                        <p class="card-text">Xem báo cáo và số liệu thống kê sự kiện.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="/Statistics/Index" class="btn btn-success w-100">Xem thống kê</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
