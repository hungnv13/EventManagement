@{
    ViewBag.Title = "Admin Dashboard";
    var username = ViewBag.Username as string ?? "Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .dashboard-title {
            font-weight: 600;
        }

        .card-icon {
            font-size: 2rem;
            margin-bottom: 10px;
            color: #0d6efd;
        }

        .card:hover {
            transform: translateY(-4px);
            transition: 0.3s;
        }
    </style>
</head>
<body>
    <!-- Dashboard content -->
    <section class="container my-5">
        <h2 class="mb-4 text-center dashboard-title">Bảng điều khiển quản trị</h2>
        <div class="row g-4 justify-content-center">
            <!-- Sự kiện -->
            <div class="col-md-4 col-sm-6">
                <div class="card text-center h-100 shadow-sm">
                    <div class="card-body">
                        <div class="card-icon"><i class="bi bi-calendar-event-fill"></i></div>
                        <h5 class="card-title">Quản lý sự kiện</h5>
                        <p class="card-text">Thêm, sửa, xoá các sự kiện trong hệ thống.</p>
                        <a href="/Event/Index" class="btn btn-outline-primary w-100">Quản lý sự kiện</a>
                    </div>
                </div>
            </div>

            <!-- Người dùng -->
            <div class="col-md-4 col-sm-6">
                <div class="card text-center h-100 shadow-sm">
                    <div class="card-body">
                        <div class="card-icon"><i class="bi bi-people-fill"></i></div>
                        <h5 class="card-title">Quản lý người dùng</h5>
                        <p class="card-text">Xem, chỉnh sửa, và xoá người dùng hệ thống.</p>
                        <a href="/Account/Index" class="btn btn-outline-secondary w-100">Quản lý người dùng</a>
                    </div>
                </div>
            </div>

            <!-- Thống kê -->
            <div class="col-md-4 col-sm-6">
                <div class="card text-center h-100 shadow-sm">
                    <div class="card-body">
                        <div class="card-icon"><i class="bi bi-bar-chart-fill"></i></div>
                        <h5 class="card-title">Thống kê sự kiện</h5>
                        <p class="card-text">Xem báo cáo và số liệu thống kê sự kiện.</p>
                        <a href="/Statistics/Index" class="btn btn-outline-success w-100">Xem thống kê</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
