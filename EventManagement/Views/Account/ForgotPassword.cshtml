@{
    ViewBag.Title = "Quên mật khẩu";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<style>
    body {
        background: url('https://images.unsplash.com/photo-1531058020387-3be344556be6') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.95);
        padding: 40px 30px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 450px;
    }

    .form-title {
        text-align: center;
        margin-bottom: 25px;
        font-weight: bold;
        color: #2c3e50;
    }

        .form-title i {
            color: #27ae60;
            margin-right: 8px;
        }

    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .form-control {
        border-radius: 30px;
        padding-left: 45px;
        background-color: #f9f9f9;
    }

    .form-group i {
        position: absolute;
        top: 50%;
        left: 15px;
        transform: translateY(-50%);
        color: #888;
    }

    .btn-submit {
        width: 100%;
        border-radius: 30px;
        background-color: #27ae60;
        border: none;
        font-weight: bold;
        font-size: 16px;
        padding: 10px;
    }

        .btn-submit:hover {
            background-color: #219150;
        }

    .error-message {
        color: red;
        text-align: center;
        margin-top: 15px;
        font-weight: 500;
    }

    .success-message {
        color: green;
        text-align: center;
        margin-top: 15px;
        font-weight: 500;
    }

    .form-links {
        margin-top: 15px;
        text-align: center;
        font-size: 0.95rem;
    }

        .form-links a {
            color: #27ae60;
            text-decoration: none;
        }

            .form-links a:hover {
                text-decoration: underline;
            }

    #loading-spinner {
        display: none;
    }
</style>


<div class="form-container">
    <h3 class="form-title"><i class="fas fa-unlock-alt"></i> Quên mật khẩu</h3>

    <form method="post">
        <div class="form-group">
            <i class="fas fa-user"></i>
            <input type="text" name="username" class="form-control" placeholder="Tên đăng nhập" required />
        </div>

        <div class="form-group">
            <i class="fas fa-envelope"></i>
            <input type="email" name="email" class="form-control" placeholder="Email đã đăng ký" required />
        </div>

        <button type="submit" class="btn btn-submit">Gửi mật khẩu mới</button>

        @if (!string.IsNullOrEmpty(ViewBag.Message as string))
        {
            <p class="success-message">@ViewBag.Message</p>
        }

        @if (!string.IsNullOrEmpty(ViewBag.Error as string))
        {
            <p class="error-message">@ViewBag.Error</p>
        }

        <div class="form-links">
            <a href="/Account/Login">🔙 Quay lại đăng nhập</a>
        </div>
    </form>
</div>
    
