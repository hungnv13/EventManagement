@using Microsoft.AspNetCore.Http
@{
    var username = Context.Session.GetString("Username");
    var role = Context.Session.GetString("Role");

    string dashboardLink = role == "Admin"
        ? Url.Action("AdminDashboard", "Home")
        : Url.Action("UserDashboard", "Home"); // Mặc định cho User
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventManagement</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventManagement.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        .navbar-main {
            background-color: #27ae60;
            box-shadow: 0 2px 6px rgba(0,0,0,0.2);
        }

        .navbar-sub {
            background-color: #111;
        }

        .nav-link {
            color: #ddd !important;
            margin-right: 10px;
        }

            .nav-link:hover {
                color: #fff !important;
            }

        .form-control:focus {
            box-shadow: none;
            border-color: #28a745;
        }

        .btn-outline-light:hover {
            background-color: #fff;
            color: #28a745;
        }

        /* ✅ Custom search styles */
        .search-form {
            width: 500px;
            max-width: 100%;
        }

        .search-input {
            border-radius: 50px;
            padding: 0.5rem 1rem;
            background-color: #fff;
            border: 1px solid #ccc;
            transition: box-shadow 0.3s ease;
        }

            .search-input:focus {
                box-shadow: 0 0 0 2px #28a74566;
            }

        .search-btn {
            border-radius: 50px;
            padding: 0.45rem 0.9rem;
            background-color: #fff;
            color: #28a745;
            border: 1px solid #28a745;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .search-btn:hover {
                background-color: #28a745;
                color: white;
            }
    </style>
</head>
<body>
    @if (!string.IsNullOrEmpty(username))
    {
        <!-- Navbar chính -->
        <nav class="navbar navbar-expand-lg navbar-main navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="@dashboardLink">
                    EventBox
                </a>

                <!-- ✅ Search bar chỉnh sửa -->
                <form class="d-flex mx-auto search-form" method="get" action="@Url.Action("Search", "Home")">
                    <input class="form-control me-2 search-input" type="search" name="q" placeholder="Tìm kiếm sự kiện..." value="@Context.Request.Query["q"]" />
                    <button class="btn search-btn" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </form>

                <!-- Right -->
                <div class="d-flex align-items-center">
                    <div class="dropdown me-2">
                        <button class="btn btn-outline-light dropdown-toggle" type="button" id="eventDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            📅 Sự kiện
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="eventDropdown">
                            <li><a class="dropdown-item" href="/Event/Index">📋 Danh sách sự kiện</a></li>
                            <li><a class="dropdown-item" href="/Event/Create">➕ Tạo sự kiện</a></li>
                        </ul>
                    </div>
                    <a href="/Ticket/MyTickets" class="btn text-white me-3">
                        <i class="bi bi-ticket-perforated"></i> Vé đã mua
                    </a>

                    <!-- Dropdown menu 👋 -->
                    <div class="dropdown me-3">
                        <button class="btn btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            👋 @username
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/Account/Edit">✏️ Chỉnh sửa tài khoản</a></li>
                            <li><a class="dropdown-item" href="/Account/ChangePassword">🔒 Đổi mật khẩu</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item text-danger" href="/Account/Logout">🚪 Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    }

    <!-- Nội dung chính -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
